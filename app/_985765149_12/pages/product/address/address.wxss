.addr-input {
    padding-bottom: 10rpx;
    width: 550rpx;
}

.addr-ht {
    height: 79rpx;
}

.picker-view {
    width: 100%;
    display: flex;
    z-index: 12;
    background-color: #fff;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    height: 40vh;
}

.picker-item {
    line-height: 70rpx;
    margin-left: 5rpx;
    margin-right: 5rpx;
    text-align: center;
}

.addr-bt {
    border-top: 1px solid #f8f8f8;
}

.pos-addr {
    top: 9rpx;
    right: 0rpx;
}